    <div style="color:red;" th:unless="${#fields.hasErrors('account')}" th:errors="*{account}"></div><br/>

    <label>密碼：</label>
    <input type="password" th:field="*{password}" />
    <div style="color:red;" th:if="${#fields.hasErrors('password')}" th:errors="*{password}"></div><br/>
